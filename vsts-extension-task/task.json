{
    "id": "eb51abb6-917c-4266-b188-29d75e4dc944",
    "name": "ExtensionTask",
    "friendlyName": "Package and Publish VSTS Extension.",
    "description": "Package and Pusblish VSTS Extension.",
    "helpMarkDown": "[More Information](https://github.com/jessehouwing/vsts-extension-tasks/wiki/)",
    "category": "Package",
    "author": "Jesse Houwing",
    "version": {
        "Major": 0,
        "Minor": 0,
        "Patch": 0
    },
    "visibility": [
        "Build",
        "Release"
    ],
    "demands": [
        "node.js",
        "npm"
    ],
    "minimumAgentVersion": "1.83.0",
    "groups": [
        {
            "name": "CommonOptions",
            "displayName": "",
            "isExpanded": true
        },
        {
            "name": "AdvancedOptions",
            "displayName": "Advanced",
            "isExpanded": false
        },
        {
            "name": "PackageOptions",
            "displayName": "Package",
            "isExpanded": true
        },
        {
            "name": "PublishOptions",
            "displayName": "Publish",
            "isExpanded": true
        },
        {
            "name": "ShareOptions",
            "displayName": "Notes",
            "isExpanded": true
        },
        {
            "name": "GlobalOptions",
            "displayName": "Global",
            "isExpanded": false
        }
    ],
    "inputs": [
        /* Group Common */
        {
            "defaultValue": "",
            "groupName": "CommonOptions",
            "helpMarkdown": "",
            "label": "Publisher ID",
            "name": "PublisherID",
            "required": true,
            "type": "string"
        },
        {
            "defaultValue": "",
            "groupName": "CommonOptions",
            "helpMarkdown": "",
            "label": "Extension ID",
            "name": "ExtensionID",
            "required": true,
            "type": "string"
        },
        {
            "defaultValue": "",
            "groupName": "CommonOptions",
            "helpMarkdown": "",
            "label": "Extension Tag",
            "name": "ExtensionTag",
            "required": false,
            "type": "string"
        },
        {
            "defaultValue": "",
            "groupName": "CommonOptions",
            "helpMarkdown": "",
            "label": "Extension Version",
            "name": "ExtensionVersion",
            "required": false,
            "type": "string"
        },
        {
            "defaultValue": "Private",
            "groupName": "CommonOptions",
            "helpMarkdown": "",
            "label": "Extension Visibility",
            "name": "ExtensionVisibility",
            "required": false,
            "options": {
                "Private": "Private",
                "PrivatePreview": "Private, Preview",
                "PublicPreview": "Public, Preview",
                "Public": "Public"
            },
            "type": "pickList"
        },

        /* Global Options */
        {
            "name": "ServiceEndpoint",
            "type": "connectedService:marketplace-auth-key",
            "label": "Service Endpoint",
            "defaultValue": "",
            "required": true,
            "helpMarkDown": "",
            "groupName": "GlobalOptions"
        },
        {
            "name": "TfxInstall",
            "type": "boolean",
            "label": "Install Tfx-cli",
            "defaultValue": "false",
            "required": false,
            "helpMarkDown": "",
            "groupName": "GlobalOptions"
        },
        {
            "name": "TfxLocation",
            "type": "filePath",
            "label": "Tfx Location",
            "defaultValue": "",
            "required": false,
            "helpMarkDown": "",
            "groupName": "GlobalOptions"
        },

        /* Packaging Options */
        {
            "name": "EnablePackaging",
            "type": "boolean",
            "label": "Enable Packaging",
            "defaultValue": "false",
            "required": true,
            "helpMarkDown": "",
            "groupName": "PackagingOptions"
        },
        {
            "name": "ManifestGlobs",
            "type": "filePath",
            "label": "ManifestGlobs",
            "defaultValue": "**\\extension-manifest.json",
            "required": true,
            "helpMarkDown": "",
            "groupName": "PackagingOptions",
            "visibleRule": "EnablePackaging = true"
        },
        {
            "name": "ExtensionRoot",
            "type": "filePath",
            "label": "Extension Root",
            "defaultValue": "$(Build.SourcesDirectory)",
            "required": true,
            "helpMarkDown": "",
            "groupName": "PackagingOptions",
            "visibleRule": "EnablePackaging = true"
        },
        {
            "name": "PackagingOutputPath",
            "type": "filePath",
            "label": "Output path",
            "defaultValue": "$(Build.BinariesDirectory)",
            "required": true,
            "helpMarkDown": "",
            "groupName": "PackagingOptions",
            "visibleRule": "EnablePackaging = true"
        },

        /* Advanced options */
        {
            "name": "OverrideFile",
            "type": "filePath",
            "label": "Override File",
            "defaultValue": "",
            "required": false,
            "helpMarkDown": "",
            "groupName": "AdvancedOptions"
        },
        {
            "name": "OverrideJson",
            "type": "multiLine",
            "label": "Override Json",
            "defaultValue": "",
            "required": false,
            "helpMarkDown": "",
            "groupName": "AdvancedOptions"
        },
        {
            "name": "OverrideInternalVersion",
            "type": "bool",
            "label": "Override Internal Version",
            "defaultValue": "true",
            "required": false,
            "helpMarkDown": "",
            "groupName": "AdvancedOptions"
        },
        {
            "name": "BypassValidation",
            "type": "booloan",
            "label": "Bypass Validation",
            "defaultValue": "false",
            "required": true,
            "helpMarkDown": "",
            "groupName": "AdvancedOptions"
        }
    ],
    "instanceNameFormat": "Package and Pusblish VSTS Extension",
    "execution": {
        "PowerShell": {
            "target": "$(currentDirectory)\\vsts-extension-task.ps1",
            "argumentFormat": "",
            "workingDirectory": "$(Build.SourcesDirectory)"
        }
    }
}
